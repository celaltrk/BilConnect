@model ApplicationUser

@{
    ViewData["Title"] = "List of Posts";
}

<style>
    /* Added CSS for square images */
    .img-square {
        width: 150px; /* Set the width of the image */
        height: 150px; /* Set the height of the image */
        object-fit: cover; /* This will ensure the image covers the area nicely */
    }
</style>


@functions {
    private string GetBadgeClass(BilConnect.Data.Enums.PostStatus status) // Replace 'YourEnumType' with the actual type of your enum
    {
        switch (status)
        {
            case BilConnect.Data.Enums.PostStatus.Available: 
                return "bg-success";
            case BilConnect.Data.Enums.PostStatus.Suspended: 
                return "bg-danger";
            default:
                return "bg-secondary"; 
        }
    }
}


@*Define View Data*@

@*Write Code*@

<div class="row">
    @if (Model.Posts != null && Model.Posts.Any())
    {
        foreach (var item in Model.Posts)
        {
            <div class="col-md-4 col-xs-6 border-primary mb-3">
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row g-0">
                        <div class="col-md-12">
                            <div class="card-header text-white bg-info">
                                <h5 class="card-title">
                                    @item.Title
                                    <a class="text-white float-right"><i class="bi bi-pencil-square"></i></a>
                                </h5>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <img src="@item.ImageURL" class="img-fluid" alt="@item.Title">
                        </div>
                        <div class="col-md-6">
                            <div class="card-body">
                                <p class="card-text">@item.Description</p>
                                <p class="card-text"><b>Post Author: </b>@item.User.FullName</p>
                                <p class="card-text"><b>Post Date: </b>@item.PostDate.ToString("dd MMM yy")</p>
                                <p class="card-text">
                                    <b>Status: </b>
                                    <span class="badge @GetBadgeClass(@item.PostStatus) text-white">@item.PostStatus</span>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="card-footer">
                                <a class="btn btn-outline-primary float-right" asp-controller="Posts" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye-fill"></i> Show Details</a>
                                <a class="btn btn-outline-primary float-right" asp-controller="Posts" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-eye-fill"></i> Edit Post</a>
                                <a class="btn btn-outline-primary float-right" asp-controller="Posts" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-eye-fill"></i> Delete Post</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <p>You don't have any posts.</p>
    }
</div>