@using System.Security.Claims;
@using BilConnect.Models.PostModels;
@model Post

@{
    ViewData["Title"] = "Post Details";
}


<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Details</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                
                <<div class="row">
                    <div class="col text-center">
                        <h1>@Model.Title</h1>
                    </div>
                </div>

                <div class="form-group text-center">
                    <img id="ProfilePicturePreview" src="@Model.ImageURL" alt="Profile Picture"
                         style="width: 150px; height: 150px; object-fit: cover;" class="border-info rounded-circle" />
                </div>

                
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" readonly />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="User.FullName" class="control-label"></label>
                    <input asp-for="User.FullName" class="form-control" readonly />
                    <span asp-validation-for="User.FullName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="PostDate" class="control-label">Post Date</label>
                    <input id="PostDate" type="text" class="form-control" readonly value="@Model.PostDate.ToLocalTime().ToString("dd MMM yy HH:mm")" />
                    <span class="text-danger"></span>
                </div>

                
                @if (Model is SellingPost sellingPost)
                {
                    <div class="form-group">
                        <label>Price</label>
                        <input class="form-control" value="@sellingPost.Price" readonly />
                    </div>
                }else if(Model is DonationPost donationPost)
                {

                }else if(Model is BorrowingPost borrowingPost)
                {
                    <div class="form-group">
                        <label>Price</label>
                        <input class="form-control" value="@borrowingPost.Price" readonly />
                    </div>

                    <div class="form-group">
                        <label>Return Date</label>
                        <input class="form-control" value="@borrowingPost.ReturnDate" readonly />
                    </div>
                }else if(Model is EventTicketPost eventTicketPost)
                {
                    <div class="form-group">
                        <label>Event Place</label>
                        <input class="form-control" value="@eventTicketPost.EventPlace" readonly />
                    </div>

                    <div class="form-group">
                        <label>Event Time</label>
                        <input class="form-control" value="@eventTicketPost.EventTime" readonly />
                    </div>

                    <div class="form-group">
                        <label>Price</label>
                        <input class="form-control" value="@eventTicketPost.Price" readonly />
                    </div>
                }else if(Model is FoundItemPost foundItemPost)
                {
                    
                }else if(Model is LostItemPost lostItemPost)
                {
                    <div class="form-group">
                        <label>Place</label>
                        <input class="form-control" value="@lostItemPost.Place" readonly />
                    </div>
                }else if(Model is PetAdoptionPost petAdoptionPost)
                {
                    <div class="form-group">
                        <label>Event Time</label>
                        <input class="form-control" value="@petAdoptionPost.IsFullyVaccinated" readonly />
                    </div>

                    <div class="form-group">
                        <label>Price</label>
                        <input class="form-control" value="@petAdoptionPost.AgeInMonths" readonly />
                    </div>
                }else if(Model is TravellingPost travellingPost)
                {
                    <div class="form-group">
                        <label>Origin</label>
                        <input class="form-control" value="@travellingPost.Origin" readonly />
                    </div>

                    <div class="form-group">
                        <label>Destinatione</label>
                        <input class="form-control" value="@travellingPost.Destination" readonly />
                    </div>

                    <div class="form-group">
                        <label>TravelTime</label>
                        <input class="form-control" value="@travellingPost.TravelTime" readonly />
                    </div>

                    <div class="form-group">
                        <label>Price</label>
                        <input class="form-control" value="@travellingPost.Price" readonly />
                    </div>

                    <div class="form-group">
                        <label>Quota</label>
                        <input class="form-control" value="@travellingPost.Quota" readonly />
                    </div>
                }

                @if (User.FindFirst(ClaimTypes.NameIdentifier)?.Value != Model.UserId) // Compare current user's ID with Model.UserId
                {
                    <a asp-controller="PostReports" asp-action="Create" asp-route-id="@Model.Id">Create New Post Report</a>
                }
                
                
            </div>
        </div>
    </div>
</div>

