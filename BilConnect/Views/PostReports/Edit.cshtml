@using BilConnect.Data.ViewModels;
@using BilConnect.Data.ViewModels.PostReportViewModels;

@model NewPostReportVM

@{
    ViewData["Title"] = "Update Edit";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Update Edit</h4>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="ReporterId" />
                    <input type="hidden" asp-for="ReportedPostId" />
                    <input type="hidden" asp-for="Status" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-md-4 offset-4 text-center">
                        <img width="100%" id="ImageUrlPreview" />
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>



                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                    </div>

                </form>

            </div>
        </div>

    </div>
</div>

